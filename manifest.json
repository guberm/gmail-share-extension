{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Gmail Share Page",
  "version": "1.1.0",
  "description": "Share page via Gmail with multiple account support: subject=title, body=url or selection, configurable recipient",
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Share via Gmail"
  },
  "options_page": "options.html"
}